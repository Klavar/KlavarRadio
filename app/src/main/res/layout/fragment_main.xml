<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.tonymerritt.klavarradio.fragments.MainFragment">

    <!-- TODO: Update blank fragment layout -->

   <android.support.v4.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="12dp"
               android:paddingTop="12dp"
               android:text="It's Friday Evenng"
               android:textColor="#D6D6D6"
               android:textSize="25sp" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="12dp"
               android:paddingTop="12dp"
               android:text="Play something"
               android:textColor="#A4A4A4"
               android:textSize="18sp" />

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/container_top_row">

           </FrameLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="12dp"
               android:paddingTop="12dp"
               android:text="It's A New Day"
               android:textColor="#D6D6D6"
               android:textSize="25sp" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="12dp"
               android:paddingTop="12dp"
               android:text="This is for you"
               android:textColor="#A4A4A4"
               android:textSize="18sp" />

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/container_middle_row">

           </FrameLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="12dp"
               android:paddingTop="12dp"
               android:text="It's  The Weekend"
               android:textColor="#D6D6D6"
               android:textSize="25sp" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="12dp"
               android:paddingTop="12dp"
               android:text="Yeh baby"
               android:textColor="#A4A4A4"
               android:textSize="18sp" />

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/container_bottom_row">

           </FrameLayout>

       </LinearLayout>
   </android.support.v4.widget.NestedScrollView>

</FrameLayout>
